<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="18dp"
    android:background="@color/normal_background_base_color">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerVertical="true"
        android:background="@android:color/black" />

    <View
        android:id="@+id/view_center"
        style="@style/Center_Place_Holder" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/view_center"
        android:background="@color/normal_background_base_color"
        android:paddingEnd="@dimen/general_margin_small"
        android:paddingStart="@dimen/general_margin_small"
        android:textSize="@dimen/small_text_size"
        tools:text="2018年1月26号" />

</RelativeLayout>