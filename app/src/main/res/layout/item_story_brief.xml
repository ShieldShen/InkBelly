<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    android:background="@color/normal_background_base_color"
    android:paddingBottom="@dimen/general_margin_tiny"
    android:paddingEnd="@dimen/general_margin_small"
    android:paddingStart="@dimen/general_margin_small"
    android:paddingTop="@dimen/general_margin_tiny">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/elevation_card_view_resting"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="@dimen/card_view_normal_corner_radius"
        app:cardElevation="@dimen/elevation_card_view_resting"
        app:cardMaxElevation="@dimen/elevation_card_view_picked_up"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_view_normal_background_color"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_story_title"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="bottom"
            android:background="@color/story_brief_title_background_color"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingEnd="@dimen/general_text_padding_horizontal"
            android:paddingStart="@dimen/general_text_padding_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/stories_item_title_text_size"
            tools:text="Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title Title" />


    </android.support.v7.widget.CardView>

</RelativeLayout>